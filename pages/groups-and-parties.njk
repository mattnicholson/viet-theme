{% extends "pages/_layout.njk" %}
{% import "_includes/macros.njk" as macros with context %}

{# COMPONENTS #}
{% import "_includes/components/pageData.njk" as pageData %}

{# MAIN CONTENT #}
{%  set p = page %}
{%  set l = locations %}


{% block main %}

<div class="p-inset text-center  pt-[150px]">
    <div class="content">
    <h1>Groups & Parties</h1>
    </div>

    {# RESET VENUE IF NO HASH...NEEDS REWORKING AS ROUTE DOESNT MATCH WHEN CLICKING LINK EVEN IF HASH PRESENT #}
	{#
	<div x-data x-effect="if(!$store.route.match('#'))$store.venue.setActive('')"></div>
	#}

     <div x-data x-show="$store.venue.active != ''">
    {{ macros.pageSwitcher(p,l) }}
    </div>

    <template x-data x-if="$store.venue.active == ''">
    	<div class="w-[80%] max-w-[600px] mx-auto">
    		<div class="content text-center p-inset">
				<h2>Please select a venue...</h2>
			</div>
    		<ul class="flex flex-col gap-gutter ">
    		{% for location in locations %}
    		<li>
    			<a href="#{{location.slug}}" class="block cursor-pointer py-[0.4em] px-gutter  bg-[#cccccc] aspect-[4/2] flex justify-center items-center" >{{ location.title }}</a>
    		</li>
			{% endfor %}
  			</ul>
    	</div>
    </template>

    {% for location in locations %}
    <template x-data x-if="$store.venue.active == '{{location.slug}}'">
    <div>
    <script src="https://static.airtable.com/js/embed/embed_snippet_v1.js"></script><iframe class="airtable-embed airtable-dynamic-height" src="https://airtable.com/embed/appKklfzdSZYMkkZ4/shriyTzuA5RNdQImq?backgroundColor=red" frameborder="0" onmousewheel="" width="100%" height="898" style="background: transparent;"></iframe>
    </div>
    </template>
	{%  endfor %}

  </div>
  <hr />



{% endblock %}
  
