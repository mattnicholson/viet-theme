{# SUBPAGE CONTENT #}
{% block main %}
  
    <div x-data x-effect="$store.venue.setActive('{{pageLocation.slug}}')"></div>
  
  {# PAGE DATA #}
  {{ pageData.render({
    title : pageLocation.title,
    url : page.url
  }) }}


  

  <div class="relative flex flex-col gap-inset">
    <div class="py-gutter bg-accent absolute top-0 left-0 right-0 -translate-y-full text-relief">
      {{ ticker.render('Promotional text here') }}
    </div>


    {{ imageWithText.render({
      imagePosition:'right',
      preHeading:'Our Story',
      heading:'One of London’s first Vietnamese restaurants',
      text: "<p>Nestled in the heart of East London, in vibrant Shoreditch, Cay Tre Hoxton was one of the first Vietnamese restaurants to hit the London food scene.</p><p>Starting in 2003, Shoreditch felt like the ideal location for our first Vietnamese restaurant in London; a hub of energy & creativity, eager to try new things. Two decades later, we’re happy nothing’s changed! </p>",
      link1Url:'/pages/our-story/',
      link1Text:"More",
      image:'/assets/img/hoxton-01.jpg'
    }) }}
    

    <div class="relative w-full max-w-[60em] mx-auto">
    <div class="relative p-inset">
      <div class="u-text-eyebrow absolute top-0 left-1/2 -translate-x-1/2">Menus</div>
      {{ topFrame.render() }}
      <div class="relative md:p-inset pt-[70px]">
      {{ modalMenusTemplate.render({location:pageLocation}) }}
      </div>
    </div>
    </div>


    <div class="flex flex-col md:flex-row gap-inset justify-center items-center">
    <a class="u-link-button-wide" href="#book">Book a Table</a>
    <a class="u-link-button-wide" href="#takeaway">Order Takeaway</a>
    <a class="u-link-button-wide" href="#delivery">Order Delivery</a>
    </div>


    {{ collage.render({
      portrait: '/assets/img/hoxton-collage-portrait.jpg',
      landscape : '/assets/img/hoxton-collage-landscape.jpg',
      illustration:'/assets/img/hoxton-collage-illustration.png'
    })}}

    

    {{ imageWithText.render({
      imagePosition:'left',
      preHeading:'Events',
      heading:'Private Parties & Group Bookings',
      text: "<p>We can cater to large group bookings offering bespoke packages to suit your every need.</p><p>We create a selection of tasting menus, canapés and cocktails for all occasions. Speak with one of our venues and we will be happy to accommodate you and your guests in true Vietnamese style.</p>",
      link1Url:'/pages/groups-and-parties/#{{ pageLocation.slug }}',
      link1Text:"More",
      image:'/assets/img/hoxton-private.jpg'
    }) }}
    
   

    <div class="relative py-[10vh]">
      <div class="z-[0] absolute inset-0">
        {{ image.render({
          aspect:'fluid',
          src: pageLocation.texture
        }) }}
      </div>

      <div class="relative z-[1] text-light">
        <div class="w-[60%] md:w-[90%] mx-auto max-w-[60em] flex flex-col md:flex-row gap-inset">
          <div class="relative md:w-[33%] flex flex-col gap-gutter">
           
              {{ image.render({
                aspect:'square',
                fit:'contain',
                src: '/assets/img/food-01.png'
              }) }}

              <div class="text-center">
                <div class="u-text-eyebrow mb-[0.5em]">PHO BO</div>
                <div class="leading-tight">Beef, Coriander<br />Mushrooms, Lemongrass</div>
              </div>

           
          </div>
          <div class="relative md:w-[33%] flex flex-col gap-gutter">
           
              {{ image.render({
                aspect:'square',
                fit:'contain',
                src: '/assets/img/food-02.png'
              }) }}

              <div class="text-center">
                <div class="u-text-eyebrow mb-[0.5em]">Banh xeo</div>
                <div class="leading-tight">Beef, Coriander<br />Mushrooms, Lemongrass</div>
              </div>
           
          </div>
          <div class="relative md:w-[33%] flex flex-col gap-gutter">
           
              {{ image.render({
                aspect:'square',
                fit:'contain',
                src: '/assets/img/food-03.png'
              }) }}
              
              <div class="text-center">
                <div class="u-text-eyebrow mb-[0.5em]">PHO BO</div>
                <div class="leading-tight">Beef, Coriander<br />Mushrooms, Lemongrass</div>
              </div>

           
          </div>
        </div>
      </div>
    </div>


    {%  set contactContent %}
    <div class="flex flex-col md:flex-row">
<div class="md:order-2 md:w-1/2 text-center flex flex-col gap-inset">

      <div class="content text-left pl-inset">
         <h1>Find Us</h1>
          <p>{{ pageLocation.locationAddress | safe }} <a href="{{ pageLocation.locationMapUrl }}">Map</a></p>
          <p>Contact:<br />{{ pageLocation.locationTelephone }}<br />
          <a href="mailto:{{ pageLocation.locationEmail }}">{{ pageLocation.locationEmail }}</a></p>
          <p>Opening Hours:<br />{{ pageLocation.locationOpening | safe }}</p>
           <a class="u-link-button" href="/pages/contact/#{{ pageLocation.slug }}">More</a>
      </div>
      </div>
      <div class="md:order-1 md:w-1/2 md:pr-inset">
          <div x-data="mapbox" @wheel.prevent="" data-latlng="{{ pageLocation.locationLatLng }}" data-hex="{{pageLocation.theme.accent }}" data-accent="{{pageLocation.locationMapAccent }}" data-tint="{{pageLocation.locationMapTint }}" data-styles="{{ pageLocation.locationMapTheme }}" class="h-[400px] md:h-auto md:aspect-square" ></div>
      </div>
    
    </div>
    {%  endset %}
    {{ contactFrame.render({
      children : contactContent
    }) }}
    
  </div>




 
{% endblock %}
  
