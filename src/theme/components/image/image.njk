{# Anything defined in here will be available at the theme level #}

{#  fit: natural | cover | contain #}

{% set defaultProps = {
	fit:'cover',
	src:'/assets/img/placeholder.jpg',
	alt : ['Image from ',data('site').url | replace('https://',''),', ',data('site').description] | join
} %}

{# Anything defined in here will be available at the theme level #}
{% set modifiers = ["default","transparent"] %}



{# Render the component #}
{% macro render(props) %}
{% set alt = defaultProps.alt  %}
{%  if props.alt %}{% set alt = props.alt  %}{%  endif %}
<div class="image {% if props.modifier %}image--{{ props.modifier }}{% endif %}" data-alt="{{ alt }}" x-data="image" x-bind="lazy" data-fit="{{ props.fit }}" data-src="{{ props.src }}"></div>
{% endmacro %}


