            {%  if content | length < 100 %}<div class="u-text-ticker">{{ content | safe }}</div>{%  endif %}
            {%  if content | length < 90 %}<div class="u-text-ticker">{{ content | safe }}</div>{%  endif %}
            {%  if content | length < 80 %}<div class="u-text-ticker">{{ content | safe }}</div>{%  endif %}
            {%  if content | length < 70 %}<div class="u-text-ticker">{{ content | safe }}</div>{%  endif %}
            {%  if content | length < 60 %}<div class="u-text-ticker">{{ content | safe }}</div>{%  endif %}
            {%  if content | length < 50 %}<div class="u-text-ticker">{{ content | safe }}</div>{%  endif %}
