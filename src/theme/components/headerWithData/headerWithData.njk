{#  Get navigation from global data and pass to basic header component #}
{% set defaultProps = {
	links : data('linklists').main,
	mobileLinks : data('linklists').main,
	shortcuts : data('linklists').shortcuts,
	mobileShortcuts : data('linklists').mobileShortcuts,
	actions : data('linklists').actions,
	locations : data('locations') | map({
		slug : '{{ slug }}',
		title : '{{ title }}',
		bookingLink : '{{ bookingLink }}',
		address:'{{ locationAddress | safe }}',
		mapUrl:'{{ locationMapUrl}}',
		deliveryUrl:'{{ deliveryUrl}}',
		email: '{{ locationEmail }}',
		telephone:'{{ locationTelephone }}',
		openingHours : '{{ locationOpening | safe }}',
		menus: '{{ menus | json | safe }}'								
	},{
		jsonKeys : ['menus']
	})
} %}

{# Anything defined in here will be available at the theme level #}
{% set modifiers = ["default"] %}



{# Render the component #}
{% macro render(props) %}

	{% render 'header',{
        render : props,
        wrapper:{
            modifier:'fixed'
        }
    } %}
    	
{% endmacro %}


