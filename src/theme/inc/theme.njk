{% extends "src/theme/inc/wrapper.njk" %}
{%  block output %}
<!DOCTYPE html>
<html lang="en">
<meta charset="UTF-8"/>
<meta http-equiv="x-ua-compatible" content="ie=edge"/>
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no, viewport-fit=cover"/>

<link rel="stylesheet" href="/style.css?v={% version %}"/>

{%  block head %}
	{#  NOTE: If you override the {% head %} block, you will need to relink the icon #}
	<link rel="icon" type="image/png" href="/assets/gfx/icon.png" />
{% endblock %}
<body>
	
	{# Create a root theme #}
	{% render 'theme',{
		inheritProps:true,
		render : {
			root:true,
			content : ''
		}
	} %}

	{%  block header %}
	
	{% endblock %}

	<div id="page">
		<div class="page-body">
			<div id="opener" class="transition-fade"></div>
			<div id="swup" class="transition-fade">
		  		<main>
				{%  block page %}

				{%  endblock %}
				</main>
			</div>
		</div>
	</div>

	{%  block footer %}
	
	{% endblock %}

	{%  block scripts %}
	
	{% endblock %}

</body>
<script type="text/javascript" src="/js/main.js"></script>
</html>
{%  endblock %}