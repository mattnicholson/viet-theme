{% import "_includes/components/image.njk" as image %}

{% macro render(props) %}
	
    <ul class="relative flex flex-row gap-gutter ">
    {% for menu in props.location.menus %}
    <li class="w-[33.33%] aspect-[3/3.9] text-light relative"><div class="absolute w-full h-full z-[0]">
  {{ image.render({
    aspect:'fluid',
    src:menu.image
  }) }}
  </div><a class="w-full h-full z-[1] absolute top-0 left-0 flex items-center text-center justify-center u-text-eyebrow bg-transparentblack" href="{{ menu.pdf}}">{{menu.title}}</a>
    </li>
	{% endfor %}
  </ul>
{% endmacro %}