{% macro render(props) %}
    <ul class="tiles">
        {% for item in props.items %}<li class="tiles-item {% if item.url != '' %}tiles-item--hasLink{% endif %}"><div class="overflow-hidden aspect-square relative">
          <div class="Image" x-data="image" x-bind="lazy" data-fit="cover" data-src="{{ item.image }}"></div>
          <div class="tiles-item-heading">{{  item.heading | safe }}</div>
          {% if item.url != '' %}<a class="block absolute w-full h-full top-0 left-0" href="{{ item.url }}"><span class="hidden">{{ item.heading }}</a>{%  endif %}
        </div></li>{% endfor %}
    </ul>
{% endmacro %}