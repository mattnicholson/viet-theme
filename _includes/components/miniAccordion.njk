{% macro render(props) %}
  <div class="p-inset bg-pale-2 flex flex-col gap-gutter">
      <div class="u-text-intro-quote pb-inset">Frequently<br/>Asked Questions</div>
      {% for item in props.items %}
      <div class="bg-pale-1" x-data="dropdown">
        <div class="p-gutter pr-inset cursor-pointer u-text-ticker flex flex-row justify-between items-center" @click="toggle">

          <p class="w-[70%]">{{item.title}}</p>

          <div class="transition" :class="open ? 'rotate-45' : 'rotate-0'">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 16 16">
              <g transform="translate(-1119.5 -585.5)">
                <line  y2="16" transform="translate(1127.5 585.5)" fill="none" stroke="#3e3c38" stroke-width="2"/>
                <line  y2="16" transform="translate(1135.5 593.5) rotate(90)" fill="none" stroke="#3e3c38" stroke-width="2"/>
              </g>
            </svg>
          </div>

        </div>
        <div x-show="open" class="p-gutter pt-[0] pb-inset u-anim-fade-in u-text-description">
          <p>{{ item.text }}</p>
        </div>
      </div>
    {% endfor %}
      
    </div>
{% endmacro %}