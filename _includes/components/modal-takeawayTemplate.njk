{% macro render(props) %}
   <div class="content">
	<h2>{{ props.location.title }} Takeaway</h2>
	</div>
    <div class="flex flex-col gap-inset">
    	<p>Please call us for takeaway orders</p>
    	<div class="flex flex-row gap-gutter">
    	<a href="tel:{{ props.location.locationTelephone }}" class="block cursor-pointer py-[0.4em] px-gutter  bg-[#cccccc]">Call Us to Collect from {{ props.location.title }}</a>
    	<a href="tel:{{ props.location.deliveryUrl }}" class="block cursor-pointer py-[0.4em] px-gutter  bg-[#cccccc]">Order for Delivery</a>
    	</div>
    	<p>{{ props.location.locationAddress | safe }} <a href="{{ props.location.locationMapUrl }}">Map</a></p>
    	<p>Contact:<br />{{ props.location.locationTelephone }}<br />
    	<a href="mailto:{{ props.location.locationEmail }}">{{ props.location.locationEmail }}</a></p>
    	<p>Opening Hours:<br />{{ props.location.locationOpening | safe }}</p>
    </div>
{% endmacro %}